@{
	ViewData["Title"] = "CreateRole";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>CreateRole</h1>

@model EntityLayer.ViewModels.RoleViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="CreateRole">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>


			<div class="form-group">
				<label asp-for="CreationDate" class="control-label"></label>
				<input  type= "datetime" asp-for="CreationDate" class="form-control" />
				<span asp-validation-for="CreationDate" class="text-danger"></span>
			</div>

			<br />

			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

