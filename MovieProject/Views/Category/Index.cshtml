@using EntityLayer.Concrete
@model List<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}




<div class="container">
    <h1>CATEGORIES</h1>
    <br />
    <table id="myTable" class="display" style="width:100%">
    <thead>
    <tr>
        <th>ID</th>
        <th>CATEGORY NAME</th>        
        
    </tr>
    </thead>

    <tbody>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.CategoryName</td>
        </tr>

    }    
    </tbody>

    
</table>

<a href="/Category/AddCategory" class="btn btn-success">ADD New Category</a>

</div>

