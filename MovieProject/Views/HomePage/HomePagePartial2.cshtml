@using EntityLayer.Concrete
@model List<Film>


<section class="section section--bg" data-bg="~/Movie/img/section/section.jpg">
	<div class="container">
		<div class="row">
			<!-- section title -->
			<div class="col-12">
				<h2 class="section__title">Coming Soon...</h2>
			</div>
			<!-- end section title -->
			<!-- card -->
			@foreach(var item in Model)
			{

			<div class="col-6 col-sm-4 col-lg-3 col-xl-2">
				<div class="card">
					<div class="card__cover">
						<img src="@item.İmageUrl" alt="">
						<a href="#" class="card__play">
							<i class="icon ion-ios-play"></i>
						</a>
					</div>
					<div class="card__content">
						<h3 class="card__title"><a href="#">@item.Name</a></h3>
						<span class="card__category">
							@foreach(var item2 in item.Categories)
							{
							<a href="#">@item2.CategoryName</a>
							
							}
						</span>
						<span class="card__rate"><i class="icon ion-ios-star"></i>@item.IMDBRaiting</span>
					</div>
				</div>
			</div>

			}
		
			<div class="col-12">
				<a href="#" class="section__btn">Show more</a>
			</div>
			<!-- end section btn -->
		</div>
	</div>
</section>
